<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_layout"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"><!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_height="match_parent"
        android:layout_width="match_parent" /><!-- The navigation drawer -->
    <RelativeLayout
        android:background="@color/green_color"
        android:clickable="true"
        android:id="@+id/right_drawer"
        android:layout_gravity="right"
        android:layout_height="wrap_content"
        android:layout_width="240dp">

        <TextView
            android:id="@+id/user_name"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="12.5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:text="Hi, Ankit"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:background="@color/light_green"
            android:drawableLeft="@drawable/gift_icon"
            android:drawablePadding="12.5dp"
            android:gravity="center_vertical"
            android:id="@+id/sign_out"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="12.5dp"
            android:text="Sign out"
            android:textColor="#ffffff" />

        <ScrollView
            android:layout_above="@+id/sign_out"
            android:layout_below="@+id/user_name"
            android:layout_height="match_parent"
            android:layout_width="240dp">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical">

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/dashboard"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="DashBoard"
                    android:textColor="#ffffff" />

                <View
                    android:background="@android:color/transparent"
                    android:layout_height="0.5dp"
                    android:layout_width="match_parent" />

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/address_book"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="Address Book"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/add_contact"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="Add Contact"
                        android:textColor="#ffffff" />

                    <View
                        android:background="@color/seprator"
                        android:layout_height="0.4dp"
                        android:layout_width="match_parent" />

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/import_contact"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="Import Contact"
                        android:textColor="#ffffff" />

                    <View
                        android:background="@color/seprator"
                        android:layout_height="0.4dp"
                        android:layout_width="match_parent" />

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/manage_group"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="Manage Group"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/profile"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="Profile"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/view_address"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="View Address"
                        android:textColor="#ffffff" />

                    <View
                        android:background="@color/seprator"
                        android:layout_height="0.4dp"
                        android:layout_width="match_parent" />

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/view_email"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="View Email"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/Shipment"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="Shipment"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/incoming"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="Incoming"
                        android:textColor="#ffffff" />

                    <View
                        android:background="@color/seprator"
                        android:layout_height="0.4dp"
                        android:layout_width="match_parent" />

                    <TextView
                        android:drawableLeft="@drawable/gift_icon"
                        android:drawablePadding="12.5dp"
                        android:gravity="center_vertical"
                        android:id="@+id/outgoing"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:padding="12.5dp"
                        android:text="Outging"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/notification"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="Notification"
                    android:textColor="#ffffff" />

                <View
                    android:background="@android:color/transparent"
                    android:layout_height="0.5dp"
                    android:layout_width="match_parent" />

                <TextView
                    android:background="@color/light_green"
                    android:drawableLeft="@drawable/gift_icon"
                    android:drawablePadding="12.5dp"
                    android:gravity="center_vertical"
                    android:id="@+id/invite"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="12.5dp"
                    android:text="Invite"
                    android:textColor="#ffffff" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>